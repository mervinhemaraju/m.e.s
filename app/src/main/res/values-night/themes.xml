<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Mes.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimaryLight">@color/red_10</item>
        <item name="colorPrimary">@color/red_200</item>
        <item name="colorPrimaryVariant">@color/red_300</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_200</item>
        <item name="colorOnSecondary">@color/grey_200</item>

        <!-- Screen brand color. -->
        <item name="colorScreenSurface">@color/grey_600</item>
        <item name="colorOnScreenSurface">@color/white</item>

        <!-- Surface Brand Color -->
        <item name="colorSurface">@color/grey_500</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Default background screen -->
        <item name="android:windowBackground">?attr/colorScreenSurface</item>

        <!-- Set the Font Family -->
        <item name="fontFamily">@font/rubik</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorScreenSurface</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">?attr/colorScreenSurface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">false</item>

        <!-- Hamburger Drawer Icon Style -->
        <item name="drawerArrowStyle">@style/Mes.Drawer.Icon.Style</item>

        <!-- Line Dividers -->
        <item name="android:listDivider">@android:color/transparent</item>

        <!-- Settings Preferences Theme -->
        <item name="preferenceTheme">@style/Mes.Theme.Preference</item>

        <!-- Progress Bar Style -->
        <item name="circularProgressIndicatorStyle">@style/Mes.ProgressIndicators.Default</item>

    </style>

</resources>